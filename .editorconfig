root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

[*.go]
indent_style = tab
# required for multiline strings in test cases
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
